.row
  .nine.columns.offset-by-three
    = render(:partial => 'shared/errors', :locals => {:object => @song})

    = form_for @song do |f|
      .row
        .two.mobile-one.columns
          .right.inline
            = f.label :name
        .ten.mobile-three.columns
          = f.text_field :name, :autofocus => true
        .two.mobile-one.columns
          .right.inline
            = f.label :image
        .ten.mobile-three.columns
          = f.text_field :image
        .two.mobile-one.columns
          .right.inline
            = f.label :cost
        .ten.mobile-three.columns
          = f.text_field :cost
        .two.mobile-one.columns
          .right.inline
            = f.label :filename
        .ten.mobile-three.columns
          = f.text_field :filename
        .two.mobile-one.columns
          .right.inline
            = f.label :genres
        .ten.mobile-three.columns
          - Genre.order(:name).each do |genre|
            %span=genre.name
            = check_box_tag 'song[genre_ids][]', genre.id, genre.in?(@song.genres.to_a)

        .ten.mobile-three.columns.offset-by-two
          = f.submit nil, :class => 'button radius'