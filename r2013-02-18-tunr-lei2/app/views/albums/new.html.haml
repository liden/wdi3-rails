.row
  .nine.columns.offset-by-three
    = render(:partial => 'shared/errors', :locals => {:object => @album})

    = form_for @album do |f|
      .row
        .two.mobile-one.columns
          .right.inline
            = f.label :name
        .ten.mobile-three.columns
          = f.text_field :name, :autofocus => true
        .two.mobile-one.columns
          .right.inline
            = f.label :image
        .ten.mobile-three.columns
          = f.text_field :image
        .two.mobile-one.columns
          .right.inline
            = f.label :songs
        .ten.mobile-three.columns
          - Song.order(:name).each do |song|
            %span= song.name
            = check_box_tag 'album[song_ids][]', song.id, song.in?(@album.songs.to_a)
        .ten.mobile-three.columns.offset-by-two
          = f.submit nil, :class => 'button radius'