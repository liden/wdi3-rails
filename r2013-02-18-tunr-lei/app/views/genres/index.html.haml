.row
  .ten.columns
    %h1 Genres

  .two.columns
    - if @auth.present? && @auth.is_admin
      = link_to('Add Genre', new_genre_path)

.row
  %table
    - @genres.each do |genre|
      %tr
        %td= genre.name
        - if @auth.present? && @auth.is_admin
          %td= link_to('Edit', edit_genre_path(genre), :class => 'button radius tiny')
          %td= link_to('Delete', genre, :method => :delete, :class => 'button radius tiny')